<component>
    <api>
        <prop name="time" type="string" default="18:30"></prop>
        <prop name="battery_percent" type="string" default="67"></prop>
    </api>
    <styles>
        <style name="main" bg_color="0xF0F0F0"
        border_width="0"
        radius="0" width="100%" height="50"
        pad_hor="16"
        layout="flex"
        flex_cross_place="center"
        flex_track_place="center"
        flex_flow="row"
        text_color="0x000000"
        />
    </styles>

    <view styles="main" scrollable="false">
        <text text="$time" flex_grow="1" />
        <icon src="wifi_icon" bind_state_if_eq="wifi_connected disabled 0"/>
        <icon src="is_charging" bind_state_if_eq="is_charging disabled 0"/>
        <icon src="battery_low" bind_state_if_eq="is_charging disabled 0"/>
        <text text="$battery_percent" />
    </view>
</component>