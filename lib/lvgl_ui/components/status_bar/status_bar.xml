<component>
    <api>
        <prop name="time" type="subject" default="curretn_time_value"></prop>
        <prop name="battery_percent" type="subject" default="battery_percent_value"></prop>
    </api>
    <consts>
        <color name="bg_color" value="0xD4D4D4" />
    </consts>
    <styles>
        <style name="main" bg_color="#bg_color"
        border_width="0"
        radius="0" width="100%" height="50"
        pad_hor="16"
        layout="flex"
        flex_cross_place="center"
        flex_track_place="center"
        flex_flow="row"
        text_color="0x000000"
        />
    </styles>

    <view styles="main" scrollable="false">
        <lv_label bind_text="$time" />
        <lv_obj flex_grow="1" style_bg_color="#bg_color" style_border_width="0" />
        <icon src="wifi_icon" bind_state_if_eq="wifi_connected disabled 0"/>
        <icon src="is_charging" bind_state_if_eq="is_charging disabled 0"/>
        <icon src="battery_low" bind_state_if_eq="is_charging disabled 0"/>
        <lv_label bind_text="$battery_percent" />
    </view>
</component>