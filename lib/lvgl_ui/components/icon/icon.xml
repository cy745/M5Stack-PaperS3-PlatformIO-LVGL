<component>
    <previews>
        <preview style_bg_color="0xffffff" width="100" height="100"/>
    </previews>

    <api>
        <prop name="src" default="battery_low" type="image"/>
    </api>

    <consts>
        <int name="size" value="24"/>
    </consts>
    
    <styles>
        <style name="main" width="#size" height="#size" image_recolor="0x000000"
        image_recolor_opa="255"/>
        <style name="off" image_recolor="0x9a9a9a"/>
    </styles>
    
    <view extends="lv_image" src="$src" styles="main off:disabled" inner_align="stretch"></view> 
</component>